input[type="text"], 
input[type="number"], 
input[type="password"], 
// .ivu-input
  border-top none
  border-right none
  border-left none
  &:focus
      box-shadow none
  &:hover
    border-color #ccc    

.ivu-input-group-prepend
  border-radius 0
  width 32px
  background rgba(0,0,0,0)
  border-top none
  border-right none
  border-left none

.ivu-form-item-error 
  .ivu-input-group-prepend
    border 1px solid ad_red
    border-top none
    border-right none
    border-left none
.ivu-form-item-error 
  .ivu-input
    // outline 0
    border 1px solid ad_red
    border-top none
    border-right none
    border-left none
    &:focus
      box-shadow none

.cart-icon-warning
  font-size 20px
  margin-right 12px
  color #ff9900

.ivu-dropdown .ivu-select-dropdown
  border-radius 0

.ivu-dropdown .ivu-select-dropdown,
.ivu-select-dropdown .dropdown-menu
    padding 0!important
